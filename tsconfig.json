{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of your source files
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": false,
    "baseUrl": "./", // Base URL for module resolution
    "paths": {
      "*": ["src/*", "src/enum/*"] // Path mappings for module resolution
    }
  },
  "include": [
    "src/**/*", // Include all files in the src directory
    "src/enum/**/*" // Include all files in the enum subdirectory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules directory
    "dist/*", // Exclude dist directory
    "src/static" // Exclude static subdirectory
  ],
  "lib": [
    "es6" // Include ES6 library definitions
  ]
}


