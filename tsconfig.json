{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": false,
    "baseUrl": "./",  // Ensures that base paths are relative to the tsconfig location
    "paths": {
      "*": ["src/*", "src/enum/*"]  // Adds custom paths for resolving modules
    }
  },
  "include": [
    "src/**/*",
    "src/enum/**/*"  // Ensures all files in the enum directory are included
  ],
  "exclude": [
    "node_modules",
    "dist/*",
    "src/static"
  ],
  "lib": [
    "es6"
  ]
}